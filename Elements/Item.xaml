<UserControl x:Class="Weather.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Weather.Elements"
                          mc:Ignorable="d">

    <Border Padding="10" 
            BorderBrush="#F0F0F0" 
            BorderThickness="0,0,0,1"
            Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="🕐" 
                           FontSize="14" 
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <Label x:Name="lHour" 
                       HorizontalContentAlignment="Center"
                       Foreground="#1A1A1A" 
                       FontSize="14"
                       Padding="0"
                       VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Состояние с иконкой погоды -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock x:Name="iconCondition" 
                           FontSize="16" 
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <Label x:Name="lCondition" 
                       HorizontalContentAlignment="Center"
                       Foreground="#666666"
                       FontSize="14"
                       Padding="0"
                       VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Влажность с иконкой капли -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock Text="💧" 
                           FontSize="14" 
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <Label x:Name="lHumidity" 
                       HorizontalContentAlignment="Center"
                       Foreground="#1A1A1A"
                       FontSize="14"
                       Padding="0"
                       VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Осадки с иконкой -->
            <StackPanel Grid.Column="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock x:Name="iconPrecipitation" 
                           FontSize="14" 
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <Label x:Name="lPrecType" 
                       HorizontalContentAlignment="Center"
                       Foreground="#666666"
                       FontSize="14"
                       Padding="0"
                       VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Температура с иконкой термометра -->
            <StackPanel Grid.Column="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock Text="🌡️" 
                           FontSize="14" 
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <Label x:Name="lTemp" 
                       HorizontalContentAlignment="Center"
                       Foreground="#1A1A1A"
                       FontSize="14"
                       FontWeight="Bold"
                       Padding="0"
                       VerticalAlignment="Center"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
