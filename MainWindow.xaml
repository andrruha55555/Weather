<Window x:Class="Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="SkyCast Pro" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Background="{StaticResource LightSkyBrush}">

    <Grid>
        <Rectangle Fill="{StaticResource MainGradient}" Opacity="0.95"/>

        <Ellipse Width="200" Height="200" 
                 Opacity="0.1" 
                 Fill="{StaticResource SunYellowBrush}" 
                 Margin="700,50,0,0"/>

        <Ellipse Width="150" Height="150" 
                 Opacity="0.05" 
                 Fill="White" 
                 Margin="100,400,0,0"/>

        <Border CornerRadius="20" 
                Margin="30" 
                Background="White" 
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="{StaticResource SkyBlueBrush}"
                        CornerRadius="20,20,0,0"
                        Padding="30,20">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
            Orientation="Horizontal" 
            VerticalAlignment="Center">

                            <StackPanel Orientation="Vertical" 
            VerticalAlignment="Center"
            Margin="0,0,10,0">

                                <Border Width="44" Height="44" CornerRadius="22">
                                    <Image Source="Images\photo.jpg" Stretch="UniformToFill"/>
                                </Border>

                                <TextBlock Text="Выполнил: Андрей Пикулев"
               Foreground="White"
               FontSize="9"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,4,0,0"/>
                            </StackPanel>

                            <TextBlock Text="⛅" 
                                       
             FontSize="24" 
             Margin="0,0,5,0"
             VerticalAlignment="Center"/>

                            <TextBlock Text="Погодка)))" 
             Foreground="White"
             FontSize="24"
             FontWeight="Bold"
             Margin="5,0,0,0"
             VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Grid.Column="1" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="White"
                                CornerRadius="25"
                                Padding="5">

                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="CityTextBox" 
                                         Text="Пермь"
                                         Width="160"
                                         Height="40"
                                         BorderBrush="Transparent"
                                         Background="Transparent"
                                         Foreground="{StaticResource TextDarkBrush}"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Padding="12,0"
                                         VerticalAlignment="Center"/>

                                <Button Content="🔍" 
                                      Style="{StaticResource IconButtonStyle}"
                                      Width="40" 
                                      Height="40"
                                      Margin="5,0,10,0"
                                      FontSize="16"
                                      Click="Update"/>

                                <ComboBox x:Name="Days" 
                                        SelectionChanged="SelectDay"
                                        Width="183"
                                        Margin="0"
                                        VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="2" 
                                  Orientation="Horizontal"
                                  VerticalAlignment="Center"
                                  Margin="10,0,0,0">

                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock x:Name="LimitInfo" 
                                             Text="0/50"
                                             Foreground="{StaticResource RainBlueBrush}"
                                             FontSize="12"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock Text="Лимит"
                                             Foreground="{StaticResource TextGrayBrush}"
                                             FontSize="10"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="10">
                                <StackPanel>
                                    <TextBlock x:Name="CacheInfo" 
                                             Text="Кэш: 0"
                                             Foreground="{StaticResource WarmOrangeBrush}"
                                             FontSize="12"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="CacheSource" 
                                             Text="API"
                                             Foreground="{StaticResource TextGrayBrush}"
                                             FontSize="10"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" 
                            Style="{StaticResource ModernScrollViewer}"
                            Padding="30">

                    <StackPanel>
                        

                        <TextBlock Text="⏳ Почасовой прогноз" 
         Margin="0,20,0,10">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#4A90E2" Offset="0"/>
                                    <GradientStop Color="#87CEEB" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource SectionHeader}">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="8" 
                                    Opacity="0.3" 
                                    ShadowDepth="1"
                                    Color="#4A90E2"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Контейнер для почасового прогноза -->

                        <!-- Добавляем StackPanel с именем "parent" для отображения детального прогноза -->
                        <StackPanel x:Name="parent" 
                                    Margin="0,20,0,0">
                            <!-- Здесь будут добавляться элементы Item -->
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>